{
  "authentication": {
    "base_url": "/api/v1/auth",
    "endpoints": [
      {
        "method": "POST",
        "path": "/login",
        "description": "User login",
        "request_body": {
          "username": "string",
          "password": "string"
        },
        "response": {
          "token": "string",
          "user": "object",
          "permissions": "array"
        }
      },
      {
        "method": "POST",
        "path": "/logout",
        "description": "User logout",
        "headers": {
          "Authorization": "Bearer {token}"
        }
      },
      {
        "method": "POST",
        "path": "/forgot-password",
        "description": "Request password reset",
        "request_body": {
          "email": "string"
        }
      },
      {
        "method": "POST",
        "path": "/reset-password",
        "description": "Reset password with token",
        "request_body": {
          "token": "string",
          "new_password": "string"
        }
      }
    ]
  },
  "user_management": {
    "base_url": "/api/v1/users",
    "endpoints": [
      {
        "method": "GET",
        "path": "/",
        "description": "Get all users with pagination",
        "query_params": {
          "page": "number",
          "limit": "number",
          "role": "string",
          "search": "string"
        }
      },
      {
        "method": "POST",
        "path": "/",
        "description": "Create new user",
        "request_body": {
          "username": "string",
          "email": "string",
          "password": "string",
          "first_name": "string",
          "last_name": "string",
          "role": "string"
        }
      },
      {
        "method": "GET",
        "path": "/{user_id}",
        "description": "Get user by ID"
      },
      {
        "method": "PUT",
        "path": "/{user_id}",
        "description": "Update user information"
      },
      {
        "method": "DELETE",
        "path": "/{user_id}",
        "description": "Delete user"
      },
      {
        "method": "PUT",
        "path": "/{user_id}/role",
        "description": "Update user role",
        "request_body": {
          "role": "string",
          "permissions": "array"
        }
      }
    ]
  },
